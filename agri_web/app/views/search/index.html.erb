<div class="search-index">
  <div class="top-image-area">
    <div class="agrihack-container">
      <div class="logo-area">
        <%= image_tag 'logo.png', class: 'logo' %>
      </div>
      <%= render 'search_form' %>
    </div>
  </div>

  <div class="agrihack-container">
    <h1><%= params[:month] || 1 %>月の旬の野菜・果物</h1>
    <%= render partial: 'search_table', locals: { vegetable_informations: @vegetable_informations } %>

    <div class="referrer-friend-button">
      近隣の飲食店に紹介してポイントをゲット
    </div>

    <h1>"<%= @vegetable_informations.first.vegetable.name %>"のおすすめレシピ</h1>
    <div class="search-table-area">
      <div class="recipe-search">
        <table class="table">
          <thead>
          <tr>
            <th>イメージ</th>
            <th>レシピ</th>
          </tr>
          </thead>

          <tbody>
          <% @titles.each_with_index do |title, index| %>
            <tr>
              <td><img src="<%= @images[index] %>"></td>
              <td><a href="<%= "https://cookpad.com/" + title.attribute('href').value %>"><%= title.content %></a></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>